            <?php endforeach ?>
            <?php endif ?>
            </tbody>
            <tfoot>
                <tr>
                    <td class="a-right" colspan="4"><?php echo $this->getAddRowButtonHtml('authors_container', 'authors_template', $this->__('Add Author')) ?></td>
